  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "CI=true react-scripts test env=jsdom --passWithNoTests",
    "lint":  "./node_modules/.bin/eslint src/**/*.{js,jsx}",
